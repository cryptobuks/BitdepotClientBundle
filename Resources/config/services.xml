<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="dizda_coinegger_client.client.wsse" class="Dizda\CoineggerClientBundle\Client\WSSEClient">
            <argument type="collection">
                <argument key="base_url">%dizda_coinegger_client.base_url%</argument>
            </argument>
            <argument>%dizda_coinegger_client.app_id%</argument>
            <argument>%dizda_coinegger_client.app_secret%</argument>
            <call method="setLogger">
                <argument type="service" id="logger" />
            </call>
        </service>

        <service id="dizda_coinegger_client.service.coinegger_client" class="Dizda\CoineggerClientBundle\Service\CoineggerClient">
            <call method="setWSSEClient">
                <argument type="service" id="dizda_coinegger_client.client.wsse" />
            </call>
        </service>

        <service id="coinegger_client" alias="dizda_coinegger_client.service.coinegger_client" />
    </services>
</container>
